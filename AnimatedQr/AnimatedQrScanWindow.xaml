<Window x:Class="ipswintakplugin.AnimatedQr.AnimatedQrScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animated QR Scan" Height="520" Width="820"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" FontWeight="SemiBold" Text="Animated QR Reader" />

        <!-- Camera preview -->
        <Border Grid.Row="1" Margin="0,10,0,10" BorderBrush="#444" BorderThickness="1" CornerRadius="6">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </Border>

        <ProgressBar Grid.Row="2" Height="18" Minimum="0" Maximum="100" Value="{Binding Progress}" />

        <DockPanel Grid.Row="3" Margin="0,10,0,0">
            <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Width="600">
                <TextBlock Text="{Binding StatusLine}" FontSize="12" Opacity="0.9"/>
                <TextBlock Text="{Binding LastPacketInfo}" FontSize="12" Opacity="0.75"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button Width="120" Margin="6,0,0,0" Content="Cancel" Click="Cancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>